<Window x:Class="Othello.Client.Wpf.Views.WaitingDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="マッチング中..."
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow"
        ShowInTaskbar="False"
        Background="White"
        Topmost="True"
        ShowActivated="True">
    <StackPanel Margin="20" Orientation="Vertical" HorizontalAlignment="Center">
        <TextBlock Text="相手を探しています..." FontSize="18" Margin="10" HorizontalAlignment="Center"/>
        <ProgressBar IsIndeterminate="True" Height="20" Width="200" Margin="10"/>
    </StackPanel>
</Window>
